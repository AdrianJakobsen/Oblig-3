package implementation;

import java.util.Scanner;

import javax.sound.sampled.ReverbType;

public class textReverse {
	
	public static void main(String [] args){
		Scanner input = new Scanner(System.in);
		System.out.println("please enter a word to be reversed: ");
		reverseString(input.next());
	}

	public void reverseString(String stringToReverse) {
		int n = stringToReverse.length();
		if(n <= 1){
			System.out.print(stringToReverse.charAt(0));
			
		}else{
			
			reverseString(stringToReverse.substring(0, stringToReverse.length()));
		}
	}

}
